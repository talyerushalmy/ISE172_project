<UserControl x:Class="GUI.UserControlActiveRequests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="251" d:DesignWidth="358">
    <Grid>
        <Label x:Name="labelHeader" Content="Label" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dataGridData" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Height="171" Width="338">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="CancelRequest">Cancel</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
