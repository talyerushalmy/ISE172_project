<UserControl x:Class="GUI.UserControlBuy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="251" d:DesignWidth="358">
    <Grid RenderTransformOrigin="0.491,0.514">
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="199" Margin="90,67,0,-14.8" Stroke="Black" VerticalAlignment="Top" Width="199"/>
        <Label x:Name="labelHeader" Content="Buy Commodity" HorizontalAlignment="Left" Margin="142,24,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelCommodityID" Content="Commodity ID" HorizontalAlignment="Left" Margin="119,88,0,0" VerticalAlignment="Top" Width="88"/>
        <ComboBox x:Name="comboBoxCommodity" HorizontalAlignment="Left" Margin="212,88,0,0" VerticalAlignment="Top" Width="48">
            <ComboBoxItem Content="0" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="1" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="2" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="3" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="4" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="5" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="6" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="7" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="8" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="9" HorizontalAlignment="Left" Width="92"/>
        </ComboBox>
        <Label x:Name="labelQuantity" Content="Quantity" HorizontalAlignment="Left" Margin="119,118,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelPrice" Content="Price" HorizontalAlignment="Left" Margin="119,149,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxQuantity" HorizontalAlignment="Left" Height="23" Margin="212,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="48" />
        <TextBox x:Name="textBoxPrice" HorizontalAlignment="Left" Height="23" Margin="212,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="48"/>
        <Button x:Name="buttonBuy" Content="Buy" HorizontalAlignment="Left" Margin="152,209,0,0" VerticalAlignment="Top" Width="75" Height="38" Click="buttonBuy_Click"/>
    </Grid>
</UserControl>
