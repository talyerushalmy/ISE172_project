<UserControl x:Class="GUI.UserControlStatistics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" Width="517" Height="371">
    <Grid Margin="0,0,0,0.2">
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="364" VerticalAlignment="Top" Width="517" Margin="0,0,-0.2,0">
            <TabItem Header="Market Share">
                <local:UserControlStatisticsTabMarketShare />
            </TabItem>
            <TabItem Header="Commodity Rates">
                <local:UserControlStatisticsTabCommodityRates />
            </TabItem>
            <TabItem Header="Highlights">
                <local:UserControlStatisticsTabHighlights />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
